[Unit]
Description=Court Auction Crawler Service (FastAPI + Telegram Webhook)
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/courtauction_crawler
ExecStart=/home/ubuntu/courtauction_crawler/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Environment="PATH=/home/ubuntu/courtauction_crawler/venv/bin"
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
